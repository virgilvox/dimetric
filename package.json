    "version": "changeset version",
    "release": "changeset publish",
    "docs": "typedoc"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.4.0",
    "typescript": "^5.6.0",
    "tsup": "^8.0.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  }
}
