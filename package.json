{
  "name": "dimetric",
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter '!@dimetric/editor' --filter '!demo-game' run build && pnpm --filter @dimetric/editor run build",
    "dev": "pnpm --filter @dimetric/editor run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "clean": "pnpm -r run clean",
    "demo": "pnpm --filter demo-game run dev",
