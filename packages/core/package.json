{
  "name": "@dimetric/core",
  "version": "0.0.1",
  "description": "Core types, isometric math, and factory functions for the Dimetric tile map engine",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "LICENSE"],
  "repository": {
    "type": "git",
    "url": "https://github.com/dimetric/dimetric",
    "directory": "packages/core"
  },
  "keywords": ["isometric", "tilemap", "game", "2d", "pixi", "tiled"],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "tsup": "^8.0.0",
    "vitest": "^2.0.0"
  }
}
